#!/bin/bash

get_weather() {
    local weather_data temperature condition_code icon condition
    
    # ﺞﻠﺑ ﺐﻳﺎﻧﺎﺗ ﺎﻠﻄﻘﺳ (ﺩﺮﺟﺓ ﺎﻠﺣﺭﺍﺭﺓ ﻭﺮﻣﺯ ﺎﻠﻄﻘﺳ)
    weather_data=$(curl -s "https://api.open-meteo.com/v1/forecast?latitude=30.7514&longitude=31.4578&current=temperature_2m,weathercode")
    temperature=$(echo "$weather_data" | jq '.current.temperature_2m')
    condition_code=$(echo "$weather_data" | jq '.current.weathercode')
    
    # ﺖﺣﻮﻴﻟ ﺮﻣﺯ ﺎﻠﻄﻘﺳ ﺈﻟﻯ ﻮﺼﻓ
    case "$condition_code" in
        0) condition="Clear" ;;  # ☀️ شمس مشرقة
        1|2|3) condition="Cloudy" ;;  # ⛅ غائم جزئيًا إلى كليًا
        45|48) condition="Fog" ;;  # 🌫️ ضباب
        51|53|55|56|57) condition="Showers" ;;  # 🌦️ زخات مطر خفيفة إلى متوسطة
        61|63|65|66|67) condition="Rain" ;;  # 🌧️ أمطار
        71|73|75|77) condition="Snow" ;;  # ❄️ ثلوج
        80|81|82) condition="Showers" ;;  # 🌦️ زخات مطر غزيرة
        85|86) condition="Snow" ;;  # ❄️ زخات ثلجية
        95|96|99) condition="Thunderstorm" ;;  # ⛈️ عواصف رعدية
        *) condition="" ;;  # ❓ غير معروف
    esac
    
    local hour=$(date '+%H')  # ﺎﻠﺤﺻﻮﻟ ﻊﻟﻯ ﺎﻠﺳﺎﻋﺓ ﺎﻠﺣﺎﻠﻳﺓ (00-23)
    
    # ﺎﺨﺘﻳﺍﺭ ﺍﻸﻴﻗﻮﻧﺓ ﺢﺴﺑ ﺡﺎﻟﺓ ﺎﻠﻄﻘﺳ ﻭﺎﻟﻮﻘﺗ
    if [ "$hour" -ge 18 ] || [ "$hour" -lt 6 ]; then
        case "$condition" in
            "Clear") icon="🌙" ;;  # سماء صافية ليلًا
            "Cloudy") icon="☁" ;;
            "Fog") icon="🌫️" ;;
            "Showers" | "Rain") icon="🌧️" ;;
            "Snow") icon="❄️" ;;
            "Thunderstorm") icon="⛈️" ;;
            *) icon="🌍" ;;
        esac
    else
        case "$condition" in
            "Clear") icon="☀️" ;;
            "Cloudy") icon="⛅" ;;
            "Fog") icon="🌫️" ;;
            "Showers" | "Rain") icon="🌦️" ;;
            "Snow") icon="❄️" ;;
            "Thunderstorm") icon="⛈️" ;;
            *) icon="🌍" ;;
        esac
    fi
    
    echo "${icon} ${condition} ${temperature}°C"
}

get_weather

